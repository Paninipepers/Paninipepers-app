{
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "ES2015",
        "lib": ["ESNext", "DOM"],
        "rootDir": "./src/",
        "outDir": "./build/",
        "sourceMap": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "importsNotUsedAsValues": "error",
        "resolveJsonModule": true
    },
    "exclude": [
        "functions"
    ]
}