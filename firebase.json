{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/instructies",
        "destination": "/instructies.html"
      },
      {
        "source": "/uploaden",
        "destination": "/uploaden.html"
      }
    ],
    "headers": [
			{
				"source": "**",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "max-age=0"
					}
				]
			}
		]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
